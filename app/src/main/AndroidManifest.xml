<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nus.iss.android.medipal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait">

        <activity
            android:name=".Activity.NavDrawerActivity"
            android:label="@string/title_activity_nav_drawer"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.MainActivity"
            android:label="Today's Schedule"
            android:parentActivityName=".Activity.NavDrawerActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activity.PersonalInfoActivity"
            android:label="@string/title_activity_personal_info"
            android:parentActivityName=".Activity.NavDrawerActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".Activity.MainActivityOld"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <!--<intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>-->
        </activity>
        <activity
            android:name=".Activity.EntryClass"
            android:label="@string/user_form"
            android:theme="@style/AppThemeWithActionBar" />
        <activity
            android:name=".Activity.AppointmentActivity"
            android:label="Add Appointment"
            android:theme="@style/AppThemeWithActionBar" />
        <activity android:name=".Activity.AppointmentList"
            android:label="Appointments"
            android:theme="@style/AppThemeWithActionBar" />
        <provider
            android:name=".Data.MedicalProvider"
            android:authorities="com.nus.iss.android.medipal"
            android:exported="false" />
	    <activity android:name=".Activity.MedicineActivity" />
        <activity android:name=".Activity.AddMedicineActivity" />

        <service
            android:name=".services.NotificationService"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>