<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nus.iss.android.medipal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.EntryClass"
            android:label="@string/user_form"
            android:theme="@style/AppThemeWithActionBar" />

        <provider
            android:name=".data.MedicalProvider"
            android:authorities="com.nus.iss.android.medipal"
            android:exported="false" />

        <activity android:name=".activity.MedicineActivity" />
        <activity android:name=".activity.AddMedicineActivity" />

        <service
            android:name=".services.NotificationService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".activity.CurrentMedicineActivity"
            android:parentActivityName=".activity.MedicineActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MedicineActivity" />
        </activity>
        <activity android:name=".activity.ReminderActivity"></activity>
    </application>

</manifest>