<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="2dp"
    >

    <ImageView
        android:layout_width="80dp"
        android:layout_height="50dp"
        app:srcCompat="@mipmap/ic_medtaken"
        android:layout_gravity="right"
        android:visibility="gone"
        android:id="@+id/ivTakenMedicine" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="50dp"
        app:srcCompat="@mipmap/ic_medmissed"
        android:layout_gravity="right"
        android:visibility="gone"
        android:id="@+id/ivMissedMedicine" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/idMedName"
                android:fontFamily="sans-serif-medium"
                android:layout_weight="1"
                android:textAppearance="?android:textAppearanceMedium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:id="@+id/idDosage"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:textAppearance="?android:textAppearanceMedium"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:id="@+id/idMedDate"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_below="@+id/idMedName"
            android:layoutDirection="rtl"
            android:textAppearance="?android:textAppearanceSmall"/>


    </LinearLayout>




</LinearLayout>
