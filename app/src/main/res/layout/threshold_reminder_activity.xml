<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/threshold_medicine_name"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_add_alert"
        android:drawableTint="#FFED0C2A"
        android:drawablePadding="10dp"
        android:hint="test"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Remaing Quantity:"
        android:layout_weight="2"
        android:layout_marginStart="25dp"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/threshold_medicine_quantity"
        android:layout_marginTop="8dp"
        android:textSize="20dp"
       android:layout_weight="2"
        android:textAlignment="inherit"
        android:hint="test quantity"/>
</LinearLayout>
    <Button
        android:id="@+id/ok_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:background="#FFF8E5AE"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:text="OK"
        android:tint="@color/cast_expanded_controller_background_color"
         />
</LinearLayout>