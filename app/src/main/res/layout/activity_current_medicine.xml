<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_current_medicine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.nus.iss.android.medipal.activity.CurrentMedicineActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description_text"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginBottom="8dp"
        android:drawableLeft="@drawable/notes"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="Description"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description_text_view"
        android:textSize="20dp"
        android:layout_marginStart="45dp"
        tools:text="Description Text"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/category_text"
            android:textStyle="bold"
            android:textSize="25dp"
            android:drawableLeft="@mipmap/select"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="Category"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginStart="45dp"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/category_text_view"
            tools:text="Category"/>
        <TextView
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:drawableLeft="@mipmap/date"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:textSize="25dp"
            android:id="@+id/expiryFactor_text"
            android:text="Expiry Date"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="45dp"
            android:textSize="20dp"
            android:id="@+id/expiryFactor_text_view"
            tools:text="Expiry Date"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Reminder_text"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:textSize="25dp"
            android:drawableLeft="@drawable/ic_add_alert"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:text="Reminder"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="45dp"
            android:textSize="20dp"
            android:id="@+id/reminder_start_time"
            tools:text="Reminder Set for Time"/>
    </LinearLayout>
</LinearLayout>
