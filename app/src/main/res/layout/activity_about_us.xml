<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DBA7EE"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_105"
        android:src="@mipmap/splashscreenicon"
        android:layout_weight="0.04" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:typeface="serif"
        android:hint="An Applications that manages all your appointments and medicines. Also monitor your progress with daily measurement feed. "/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="60dp"
    android:layout_marginStart="160dp">
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@mipmap/team"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:hint="TF-02" />
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:textStyle="normal"
        android:typeface="serif"
        android:hint="Siddharth Deshmukh\nRitesh Kumar\nShubhanshu gautam\nMedha Sharma\nThushara Joseph\nMathura Krishnan "
        android:textSize="15dp"/>

</LinearLayout>
