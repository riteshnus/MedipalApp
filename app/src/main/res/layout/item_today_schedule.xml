<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:layout_marginBottom="10dp"
    android:background="@android:color/background_light"
    android:id="@+id/item_layout_today_scheduled"
    android:orientation="horizontal">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="3">
    <TextView
        android:id="@+id/schedule_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_purple"
        android:textStyle="bold"
        android:textSize="16sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/schedule_subtitle_1"
        android:layout_below="@+id/schedule_item"
        android:textStyle="bold"
        android:textSize="13sp" />
</RelativeLayout>

    <TextView
        android:id="@+id/schedule_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textSize="13sp" />
</LinearLayout>
    <!--
        <TextView
            android:id="@+id/empty_schedule_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textStyle="bold|italic"
            android:textAlignment="center"
            android:text="No schedule \n for this part of the day" />
        -->
</RelativeLayout>
