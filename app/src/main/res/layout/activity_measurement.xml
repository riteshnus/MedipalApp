<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nus.iss.android.medipal.Activity.Measurement">
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_measuretbp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/bp"
                />

             <Button
                 android:id="@+id/bt_bp"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_marginRight="10dp"
                 android:layout_weight="9"
                 android:onClick="sendBp"
                 android:text="Blood Pressure" />
         </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_measurettemp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/temp"
                    />
                <Button
                    android:id="@+id/bt_temp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Temperature"
                    android:onClick="sendTemperature"
                    android:layout_weight="9"
                    android:layout_marginRight="10dp"
                  />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/iv_measurepulse"
                app:srcCompat="@drawable/timeline"/>
            <Button
                android:id="@+id/bt_pulse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Pulse"
                android:layout_weight="9"
                android:onClick="sendPulse"
                android:layout_marginRight="10dp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/iv_measureweight"
                app:srcCompat="@drawable/weight"/>
            <Button
                android:id="@+id/bt_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight"
               android:layout_weight="9"
                android:layout_marginRight="10dp"
                android:onClick="sendWeight"/>
        </LinearLayout>


</LinearLayout>
